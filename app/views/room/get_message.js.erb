<% unless @message.nil? %>
if($('#message_<%= @message.id %>').length > 0) {
    $('#message_<%= @message.id %> p.reply_plot').html('<%= escape_javascript(@message.body) %>');
} else {
    $('#messages').prepend('<%= escape_javascript(render partial: 'message/message', locals: {message: @message}) %>');
    <% if current_user.id == @message.character.user.id %>
      addEditableForReply('message_<%= @message.id %>');
    <% end %>
}
<% end %>